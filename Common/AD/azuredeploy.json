{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "domainAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Domain Administrator username."
            }
        },
        "domainAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Domain Administrator password."
            }
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "FQDN (e.g domain.local)."
            }
        },
        "adPDCNicIPAddress": {
            "type": "string",
            "metadata": {
                "description": "IP address of PDC"
            },
            "defaultValue": "10.10.0.4"
        },
        "adBDCNicIPAddress": {
            "type": "string",
            "metadata": {
                "description": "IP address of BDC"
            },
            "defaultValue": "10.10.0.5"
        },
        "vNetIPSubnet": {
            "type": "string",
            "metadata": {
                "description": "IP address of BDC"
            },
            "defaultValue": "10.10.0.0"
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "canRun": true,
        "adVMSize": "Standard_DS1_v2",
        "templates": {
            "namesTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/dynamic-names.json', parameters('_artifactsLocationSasToken'))]",
            "createVMTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-vm.json', parameters('_artifactsLocationSasToken'))]",
            "vnetTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken'))]",
            "adCreateForestTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-forest.json', parameters('_artifactsLocationSasToken'))]",
            "adConfigureBDCTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/configure-bdc.json', parameters('_artifactsLocationSasToken'))]",
            "vnetwithDNSTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/vnet-with-dns.json', parameters('_artifactsLocationSasToken'))]",
            "nicTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/nic.json', parameters('_artifactsLocationSasToken'))]",
            "tweakServersTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/tweak-servers.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "condition": true,
            "comments": "Get dynamic names.",
            "type": "Microsoft.Resources/deployments",
            "name": "DynamicNames",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').namesTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateVNET",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/DynamicNames"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "subnet": {
                        "value": "[parameters('vNetIPSubnet')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreatePDC",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateVNET"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').createVMTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "publicIPAddressName": {
                        "value": "[reference('DynamicNames').outputs.pdcPublicIPAddressName.value]"
                    },
                    "nicName": {
                        "value": "[reference('DynamicNames').outputs.pdcNicName.value]"
                    },
                    "vmName": {
                        "value": "[reference('DynamicNames').outputs.pdcVMName.value]"
                    },
                    "vmSize": {
                        "value": "[variables('adVMSize')]"
                    },
                    "zone": {
                        "value": "1"
                    },
                    "privateIPAddress": {
                        "value": "[parameters('adPDCNicIPAddress')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateForest",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreatePDC"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').adCreateForestTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "pdcVMName": {
                        "value": "[reference('DynamicNames').outputs.pdcVMName.value]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "name": "UpdateVNetDNS1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateForest"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetwithDNSTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "subnet": {
                        "value": "[parameters('vNetIPSubnet')]"
                    },
                    "dnsServers": {
                        "value": [
                            "[parameters('adPDCNicIPAddress')]"
                        ]
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateBDC",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/UpdateVNetDNS1"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').createVMTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "publicIPAddressName": {
                        "value": "[reference('DynamicNames').outputs.bdcPublicIPAddressName.value]"
                    },
                    "nicName": {
                        "value": "[reference('DynamicNames').outputs.bdcNicName.value]"
                    },
                    "vmName": {
                        "value": "[reference('DynamicNames').outputs.bdcVMName.value]"
                    },
                    "vmSize": {
                        "value": "[variables('adVMSize')]"
                    },
                    "zone": {
                        "value": "2"
                    },
                    "privateIPAddress": {
                        "value": "[parameters('adBDCNicIPAddress')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "ConfigureBDC",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateBDC"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').adConfigureBDCTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "bdcVMName": {
                        "value": "[reference('DynamicNames').outputs.bdcVMName.value]"
                    },
                    "pdcNicIPAddress": {
                        "value": "[parameters('adPDCNicIPAddress')]"
                    },
                    "bdcNicIPAddress": {
                        "value": "[parameters('adBDCNicIPAddress')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "name": "UpdateVNetDNS2",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/ConfigureBDC"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetwithDNSTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "subnet": {
                        "value": "[parameters('vNetIPSubnet')]"
                    },
                    "dnsServers": {
                        "value": [
                            "[parameters('adPDCNicIPAddress')]",
                            "[parameters('adBDCNicIPAddress')]"
                        ]
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "TweakServers",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/UpdateVNetDNS2"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').tweakServersTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "pdcVMName": {
                        "value": "[reference('DynamicNames').outputs.pdcVMName.value]"
                    },
                    "bdcVMName": {
                        "value": "[reference('DynamicNames').outputs.bdcVMName.value]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        }
    ]
}