{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "domainAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Domain Administrator username."
            }
        },
        "domainAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Domain Administrator password."
            }
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "FQDN (e.g domain.local)."
            }
        },
        "adPDCNicIPAddress": {
            "type": "string",
            "metadata": {
                "description": "IP address of PDC"
            },
            "defaultValue": "10.10.0.4"
        },
        "adBDCNicIPAddress": {
            "type": "string",
            "metadata": {
                "description": "IP address of BDC"
            },
            "defaultValue": "10.10.0.5"
        },
        "vNetIPSubnet": {
            "type": "string",
            "metadata": {
                "description": "IP address of BDC"
            },
            "defaultValue": "10.10.0.0"
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            },
            "defaultValue": "https://raw.githubusercontent.com/robgarrett/Azure-Labs/master/Lab-SP2016"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "canRun": false,
        "commonID": "[toLower(parameters('labName'))]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]",
        "adPDCVMName": "[concat(variables('commonID'), '-pdc')]",
        "adBDCVMName": "[concat(variables('commonID'), '-bdc')]",
        "adVMSize": "Standard_DS1_v2",
        "templates": {
            "namesTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/dynamic-names.json', parameters('_artifactsLocationSasToken'))]",
            "vnetTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken'))]",
            "adVMsTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/ad-vms.json', parameters('_artifactsLocationSasToken'))]",
            "adCreateForestTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-forest.json', parameters('_artifactsLocationSasToken'))]",
            "adConfigureBDCTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/configure-bdc.json', parameters('_artifactsLocationSasToken'))]",
            "vnetwithDNSTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/vnet-with-dns.json', parameters('_artifactsLocationSasToken'))]",
            "nicTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/nic.json', parameters('_artifactsLocationSasToken'))]",
            "tweakServersTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/tweak-servers.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "condition": true,
            "comments": "Get dynamic names.",
            "type": "Microsoft.Resources/deployments",
            "name": "DynamicNames",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').namesTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "pdcVMName": {
                        "value": "[variables('adPDCVMName')]"
                    },
                    "bdcVMName": {
                        "value": "[variables('adBDCVMName')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateVNET",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/DynamicNames"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[variables('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[variables('subnetName')]"
                    },
                    "subnet": {
                        "value": "[parameters('vNetIPSubnet')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "comments": "Create AD servers",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateADServers",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateVNET"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').adVMsTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[variables('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[variables('subnetName')]"
                    },
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "pdcVMName": {
                        "value": "[variables('adPDCVMName')]"
                    },
                    "bdcVMName": {
                        "value": "[variables('adBDCVMName')]"
                    },
                    "pdcNicIPAddress": {
                        "value": "[parameters('adPDCNicIPAddress')]"
                    },
                    "bdcNicIPAddress": {
                        "value": "[parameters('adBDCNicIPAddress')]"
                    },
                    "vmSize": {
                        "value": "[variables('adVMSize')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateForest",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateADServers"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').adCreateForestTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "pdcVMName": {
                        "value": "[variables('adPDCVMName')]"
                    },
                    "bdcVMName": {
                        "value": "[variables('adBDCVMName')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "name": "UpdateVNetDNS1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateForest"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetwithDNSTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[variables('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[variables('subnetName')]"
                    },
                    "subnet": {
                        "value": "[parameters('vNetIPSubnet')]"
                    },
                    "dnsServers": {
                        "value": [
                            "[parameters('adPDCNicIPAddress')]"
                        ]
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "name": "UpdateBDCNIC",
            "comments": "Make sure that BDC has access to PDC and Internet",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/UpdateVNetDNS1"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').nicTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "nicName": {
                        "value": "[reference('DynamicNames').outputs.bdcNicName.value]"
                    },
                    "ipConfigurations": {
                        "value": [
                            {
                                "name": "ipconfig1",
                                "properties": {
                                    "privateIPAllocationMethod": "Static",
                                    "privateIPAddress": "[parameters('adBDCNicIPAddress')]",
                                    "publicIPAddress": {
                                        "id": "[resourceId('Microsoft.Network/publicIPAddresses/', reference('DynamicNames').outputs.bdcPublicIPAddressName.value)]"
                                    },
                                    "subnet": {
                                        "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', variables('vNetName'), variables('subnetName'))]"
                                    }
                                }
                            }
                        ]
                    },
                    "dnsServers": {
                        "value": [
                            "[parameters('adPDCNicIPAddress')]"
                        ]
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "ConfigureBDC",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/UpdateBDCNIC"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').adConfigureBDCTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "bdcVMName": {
                        "value": "[variables('adBDCVMName')]"
                    },
                    "pdcNicIPAddress": {
                        "value": "[parameters('adPDCNicIPAddress')]"
                    },
                    "bdcNicIPAddress": {
                        "value": "[parameters('adBDCNicIPAddress')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "name": "UpdateVNetDNS2",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/ConfigureBDC"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetwithDNSTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[variables('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[variables('subnetName')]"
                    },
                    "subnet": {
                        "value": "[parameters('vNetIPSubnet')]"
                    },
                    "dnsServers": {
                        "value": [
                            "[parameters('adPDCNicIPAddress')]",
                            "[parameters('adBDCNicIPAddress')]"
                        ]
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        },
        {
            "condition": true,
            "type": "Microsoft.Resources/deployments",
            "name": "TweakServers",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/UpdateVNetDNS2"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').tweakServersTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "pdcVMName": {
                        "value": "[variables('adPDCVMName')]"
                    },
                    "bdcVMName": {
                        "value": "[variables('adBDCVMName')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        }
    ]
}