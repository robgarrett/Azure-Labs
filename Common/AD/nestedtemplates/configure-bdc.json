{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "domainAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Domain Administrator username."
            }
        },
        "domainAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Domain Administrator password."
            }
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "FQDN (e.g domain.local)."
            }
        },
        "bdcVMName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Backup Domain Controller VM."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "string",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            }
        }
    },
    "variables": {
        "configureADBDCTemplateUri": "[concat(parameters('_artifactsLocation'),'nestedtemplates/configureADBDC.json', parameters('_artifactsLocationSasToken'))]",
        "bdcPreparationModulesURL": "[concat(parameters('_artifactsLocation'),'DSC/PrepareADBDC.ps1.zip')]",
        "bdcPreparationScript": "PrepareADBDC.ps1",
        "bdcPreparationFunction": "PrepareADBDC",
        "bdcConfigurationModulesURL": "[concat(parameters('_artifactsLocation'),'DSC/ConfigureADBDC.ps1.zip')]",
        "bdcConfigurationScript": "ConfigureADBDC.ps1",
        "bdcConfigurationFunction": "ConfigureADBDC"
    },
    "resources": [
        {
            "condition": true,
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('bdcVMName'),'/PrepareBDC')]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.24",
                "autoUpgradeMinorVersion": true,
                "forceUpdateTag": "v1.1",
                "settings": {
                    "configuration": {
                        "url": "[variables('bdcPreparationModulesURL')]",
                        "script": "[variables('bdcPreparationScript')]",
                        "function": "[variables('bdcPreparationFunction')]"
                    },
                    "configurationArguments": {
                    }
                },
                "protectedSettings": {
                    "configurationUrlSasToken": "[parameters('_artifactsLocationSasToken')]"
                }
            }
        },
        {
            "condition": true,
            "name": "ConfiguringBackupADDomainController",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('bdcVMName'),'/extensions/PrepareBDC')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('configureADBDCTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "bdcVMName": {
                        "value": "[parameters('bdcVMName')]"
                    },
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "bdcConfigurationScript": {
                        "value": "[variables('bdcConfigurationScript')]"
                    },
                    "bdcConfigurationFunction": {
                        "value": "[variables('bdcConfigurationFunction')]"
                    },
                    "bdcConfigurationModulesURL": {
                        "value": "[variables('bdcConfigurationModulesURL')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        }
    ]
}