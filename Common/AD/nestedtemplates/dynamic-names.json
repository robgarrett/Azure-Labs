{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Name of the lab."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "string",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            }
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]",
        "pdcVMName": "[concat(variables('commonID'), '-pdc')]",
        "bdcVMName": "[concat(variables('commonID'), '-bdc')]"
    },
    "resources": [
    ],
    "outputs": {
        "pdcNicName": {
            "type": "string",
            "value": "[concat(variables('pdcVMName'), '-nic')]"
        },
        "pdcPublicIPAddressName": {
            "type": "string",
            "value": "[concat(variables('pdcVMName'), '-pip')]"
        },
        "bdcNicName": {
            "type": "string",
            "value": "[concat(variables('bdcVMName'), '-nic')]"
        },
        "bdcPublicIPAddressName": {
            "type": "string",
            "value": "[concat(variables('bdcVMName'), '-pip')]"
        },
        "pdcVMName": {
            "type": "string",
            "value": "[variables('pdcVMName')]"
        },
        "bdcVMName": {
            "type": "string",
            "value": "[variables('bdcVMName')]"
        },
        "vNetName": {
            "type": "string",
            "value": "[variables('vNetName')]"
        },
        "subnetName": {
            "type": "string",
            "value": "[variables('subnetName')]"
        }
    }
}
