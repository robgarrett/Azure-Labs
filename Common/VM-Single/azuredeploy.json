{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Domain Administrator username."
            },
            "defaultValue": "rgarrett"
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Domain Administrator password."
            }
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "Name of Virtual Machine."
            }
        },
        "vmSize": {
            "type": "string",
            "metadata": {
                "description": "Size of VM."
            },
            "defaultValue": "Standard_DS1_v2"
        },
        "vmSKU": {
            "type": "string",
            "metadata": {
                "description": "Windows SKU."
            },
            "defaultValue": "2019-Datacenter"
        },
        "vmNicIPAddress": {
            "type": "string",
            "metadata": {
                "description": "IP address"
            },
            "defaultValue": "10.0.0.5"
        },
        "vNetIPSubnet": {
            "type": "string",
            "metadata": {
                "description": "VNET Subnet"
            },
            "defaultValue": "10.0.0.0"
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent."
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "canRun": true,
        "templates": {
            "namesTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/dynamic-names.json', parameters('_artifactsLocationSasToken'))]",
            "createVMTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-vm.json', parameters('_artifactsLocationSasToken'))]",
            "vnetTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken'))]",
            "nsgTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-nsg.json', parameters('_artifactsLocationSasToken'))]",
            "nicTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/nic.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "condition": true,
            "comments": "Get dynamic names.",
            "type": "Microsoft.Resources/deployments",
            "name": "DynamicNames",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').namesTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateNSG",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/DynamicNames"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').nsgTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "nsgName": {
                        "value": "[reference('DynamicNames').outputs.nsgName.value]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateVNET",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateNSG"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "subnet": {
                        "value": "[parameters('vNetIPSubnet')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateVM",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateVNET"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').createVMTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "nsgName": {
                        "value": "[reference('DynamicNames').outputs.nsgName.value]"
                    },
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "publicIPAddressName": {
                        "value": "[reference('DynamicNames').outputs.vmPublicIPAddressName.value]"
                    },
                    "nicName": {
                        "value": "[reference('DynamicNames').outputs.vmNicName.value]"
                    },
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "vmOSDiskName": {
                        "value": "[reference('DynamicNames').outputs.vmOSDiskName.value]"
                    },
                    "vmSKU": {
                        "value": "[parameters('vmSKU')]"
                    },
                    "privateIPAddress": {
                        "value": "[parameters('vmNicIPAddress')]"
                    }
                }
            }
        }
    ]
}