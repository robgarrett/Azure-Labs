{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "domainAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Domain Administrator username."
            }
        },
        "domainAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Domain Administrator password."
            }
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "FQDN (e.g domain.local)."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "canRun": true,
        "templates": {
            "namesTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/dynamic-names.json', parameters('_artifactsLocationSasToken'))]",
            "createVMsTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-sp-servers.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "condition": true,
            "comments": "Get dynamic names.",
            "type": "Microsoft.Resources/deployments",
            "name": "DynamicNames",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').namesTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateSPServers",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/DynamicNames"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').createVMsTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        }
    ]
}