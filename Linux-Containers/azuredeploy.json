{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Administrator password."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            },
            "defaultValue": ""
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "labContainerGroupName": "[variables('commonID')]",
        "labContainerImageName": "ubuntu:latest",
        "labContainerName": "ubuntu",
        "publicDnsSuffix": "[concat(variables('commonID'), '.', resourceGroup().location, '.azurecontainers.io')]"
    },
    "resources": [
        {
            "comments": "Linux Containers",
            "name": "[variables('labContainerGroupName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "[variables('labContainerName')]",
                        "properties": {
                            "environmentVariables": [
                                {
                                    "name": "ACCEPT_EULA",
                                    "value": "Y"
                                },
                                {
                                    "name": "username",
                                    "value": "[parameters('adminUsername')]"
                                },
                                {
                                    "name": "password",
                                    "value": "[parameters('adminPassword')]"
                                },
                                {
                                    "name": "PublicDnsName",
                                    "value": "[concat(variables('labContainerName'), '.', variables('publicDnsSuffix'))]"
                                }
                            ],
                            "image": "[variables('labContainerImageName')]",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 443
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": 2,
                                    "memoryInGB": 7
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "never",
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 443
                        }
                    ],
                    "dnsNameLabel": "[variables('commonID')]"
                }
            }
        }
    ],
    "outputs": {
        "containerIPAddressFqdn": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', variables('labContainerGroupName'))).ipAddress.fqdn]"
        }
    }
}