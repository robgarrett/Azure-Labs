{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "domainAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Domain Administrator username."
            }
        },
        "domainAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Domain Administrator password."
            }
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "FQDN (e.g domain.local)."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            },
            "defaultValue": "https://raw.githubusercontent.com/robgarrett/Azure-Labs/master/Lab-SP2016"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]",
        "subnet": "10.10.0.0",
        "adPDCNicIPAddress": "10.10.0.4",
        "adBDCNicIPAddress": "10.10.0.5",
        "adPDCVMName": "[concat(variables('commonID'), '-pdc')]",
        "adBDCVMName": "[concat(variables('commonID'), '-bdc')]",
        "adVMSize": "Standard_DS1_v2",
        "templates": {
            "vnetTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken'))]",
            "adVMsTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/ad-vms.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "CreateVNET",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[variables('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[variables('subnetName')]"
                    },
                    "subnet": {
                        "value": "[variables('subnet')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "CreateADServers",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateVNET"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').adVMsTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetName": {
                        "value": "[variables('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[variables('subnetName')]"
                    },
                    "domainAdminUsername": {
                        "value": "[parameters('domainAdminUsername')]"
                    },
                    "domainAdminPassword": {
                        "value": "[parameters('domainAdminPassword')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "pdcVMName": {
                        "value": "[variables('adPDCVMName')]"
                    },
                    "bdcVMName": {
                        "value": "[variables('adBDCVMName')]"
                    },
                    "pdcNicIPAddress": {
                        "value": "[variables('adPDCNicIPAddress')]"
                    },
                    "bdcNicIPAddress": {
                        "value": "[variables('adBDCNicIPAddress')]"
                    },
                    "vmSize": {
                        "value": "[variables('adVMSize')]"
                    }
                }
            }
        }
    ]
}
