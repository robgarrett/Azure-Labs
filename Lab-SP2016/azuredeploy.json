{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "domainAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Domain Administrator username."
            }
        },
        "domainAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Domain Administrator password."
            }
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "FQDN (e.g domain.local)."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            },
            "defaultValue": "https://raw.githubusercontent.com/robgarrett/Azure-Labs/master/Lab-SP2016"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "debugOff": false,
        "commonID": "[toLower(parameters('labName'))]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]",
        "subnet": "10.10.0.0",
        "adPDCNicName": "[concat(variables('commonID'), '-pdc-nic')]",
        "adBDCNicName": "[concat(variables('commonID'), '-bdc-nic')]",
        "adPDCNicIPAddress": "10.10.0.4",
        "adBDCNicIPAddress": "10.10.0.5",
        "adPDCPublicIPAddressName": "[concat(variables('commonID'), '-pdc-pip')]",
        "adBDCPublicIPAddressName": "[concat(variables('commonID'), '-bdc-pip')]",
        "adPDCVMName": "[concat(variables('commonID'), '-pdc')]",
        "adBDCVMName": "[concat(variables('commonID'), '-bdc')]",
        "adVMSize": "Standard_DS1_v2",
        "adPDCConfigurationModulesURL": "[concat(parameters('_artifactsLocation'),'/DSC/CreateADPDC.ps1.zip')]",
        "adPDCConfigurationScript": "CreateADPDC.ps1",
        "adPDCConfigurationFunction": "CreateADPDC",
        "adBDCConfigurationModulesURL": "[concat(parameters('_artifactsLocation'),'/DSC/ConfigureADBDC.ps1.zip')]",
        "adBDCConfigurationScript": "ConfigureADBDC.ps1",
        "adBDCConfigurationFunction": "ConfigureADBDC",
        "vnetwithDNSTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/vnet-with-dns.json', parameters('_artifactsLocationSasToken'))]"
    },
    "resources": [
        {
            "condition": "[variables('debugOff')]",
            "comments": "Create Virtual Network",
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vNetName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[concat(variables('subnet'), '/16')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[concat(variables('subnet'), '/24')]"
                        }
                    }
                ]
            }
        },
        {
            "condition": "[variables('debugOff')]",
            "comments": "Create Public IP Address for PDC.",
            "apiVersion": "2016-11-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('adPDCPublicIPAddressName')]",
            "location": "[resourceGroup().location]",
            "zones": [
                "1"
            ],
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat(variables('commonID'), '-pdc')]"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', variables('vNetName'))]"
            ]
        },
        {
            "condition": "[variables('debugOff')]",
            "comments": "Create Public IP Address for BDC.",
            "apiVersion": "2016-11-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('adBDCPublicIPAddressName')]",
            "location": "[resourceGroup().location]",
            "zones": [
                "2"
            ],
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat(variables('commonID'), '-bdc')]"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', variables('vNetName'))]"
            ]
        },
        {
            "condition": "[variables('debugOff')]",
            "comments": "Create Network Interface Card for PDC.",
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('adPDCNicName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', variables('vNetName'))]",
                "[concat('Microsoft.Network/publicIPAddresses/',variables('adPDCPublicIPAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[variables('adPDCNicIPAddress')]",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses/', variables('adPDCPublicIPAddressName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', variables('vNetName'),variables('subnetName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "condition": "[variables('debugOff')]",
            "comments": "Create Network Interface Card for BDC.",
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('adBDCNicName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', variables('vNetName'))]",
                "[concat('Microsoft.Network/publicIPAddresses/',variables('adBDCPublicIPAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[variables('adBDCNicIPAddress')]",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses/', variables('adBDCPublicIPAddressName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', variables('vNetName'),variables('subnetName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "condition": "[variables('debugOff')]",
            "comments": "Create Primary Domain Controller VM",
            "name": "[variables('adPDCVMName')]",
            "apiVersion": "2017-03-30",
            "type": "Microsoft.Compute/virtualMachines",
            "zones": [
                "1"
            ],
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/',variables('adPDCNicName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('adVMSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('adPDCVMName')]",
                    "adminUsername": "[parameters('domainAdminUsername')]",
                    "adminPassword": "[parameters('domainAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(variables('adPDCVMName'), '-osdisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite"
                    },
                    "dataDisks": [
                        {
                            "name": "[concat(variables('adPDCVMName'), '-datadisk')]",
                            "diskSizeGB": 64,
                            "lun": 0,
                            "createOption": "Empty",
                            "caching": "ReadOnly"
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('adPDCNicName'))]"
                        }
                    ]
                }
            }
        },
        {
            "condition": "[variables('debugOff')]",
            "comments": "Create Backup Domain Controller VM",
            "name": "[variables('adBDCVMName')]",
            "apiVersion": "2017-03-30",
            "type": "Microsoft.Compute/virtualMachines",
            "zones": [
                "2"
            ],
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/',variables('adBDCNicName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('adVMSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('adBDCVMName')]",
                    "adminUsername": "[parameters('domainAdminUsername')]",
                    "adminPassword": "[parameters('domainAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(variables('adBDCVMName'), '-osdisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite"
                    },
                    "dataDisks": [
                        {
                            "name": "[concat(variables('adBDCVMName'), '-datadisk')]",
                            "diskSizeGB": 64,
                            "lun": 0,
                            "createOption": "Empty",
                            "caching": "ReadOnly"
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('adBDCNicName'))]"
                        }
                    ]
                }
            }
        },
        {
            "condition": "[variables('debugOff')]",
            "comments": "Promote PDC",
            "apiVersion": "2016-03-30",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('adPDCVMName'), '/PromotePDC')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', variables('adPDCVMName'))]"
            ],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.24",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "configuration": {
                        "url": "[variables('adPDCConfigurationModulesURL')]",
                        "script": "[variables('adPDCConfigurationScript')]",
                        "function": "[variables('adPDCConfigurationFunction')]"
                    },
                    "configurationArguments": {
                        "domainName": "[parameters('domainName')]"
                    }
                },
                "protectedSettings": {
                    "configurationUrlSasToken": "[parameters('_artifactsLocationSasToken')]",
                    "configurationArguments": {
                        "adminCreds": {
                            "userName": "[parameters('domainAdminUsername')]",
                            "password": "[parameters('domainAdminPassword')]"
                        }
                    }
                }
            }
        },
        {
            "condition": true,
            "comments": "Promote BDC",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('adBDCVMName'),'/PromoteBDC')]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', variables('adBDCVMName'))]"
            ],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.24",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "configuration": {
                        "url": "[variables('adBDCConfigurationModulesURL')]",
                        "script": "[variables('adBDCConfigurationScript')]",
                        "function": "[variables('adBDCConfigurationFunction')]"
                    },
                    "configurationArguments": {
                        "domainName": "[parameters('domainName')]",
                        "DNSServer": "[variables('adPDCNicIPAddress')]"
                    }
                },
                "protectedSettings": {
                    "configurationUrlSasToken": "[parameters('_artifactsLocationSasToken')]",
                    "configurationArguments": {
                        "adminCreds": {
                            "userName": "[parameters('domainAdminUsername')]",
                            "password": "[parameters('domainAdminPassword')]"
                        }
                    }
                }
            }
        },
        {
            "condition": "[variables('debugOff')]",
            "comments": "Update VNET DNS",
            "name": "UpdateVNETDNS",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',variables('adPDCVMName'),'/extensions/PromotePDC')]",
                "[concat('Microsoft.Compute/virtualMachines/',variables('adBDCVMName'),'/extensions/PromoteBDC')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vnetwithDNSTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[variables('vnetName')]"
                    },
                    "virtualNetworkAddressRange": {
                        "value": "[concat(variables('subnet'), '/16')]"
                    },
                    "subnetName": {
                        "value": "[variables('subnetName')]"
                    },
                    "subnetRange": {
                        "value": "[concat(variables('subnet'), '/24')]"
                    },
                    "DNSServerAddresses": {
                        "value": [
                            "[variables('adPDCNicIPAddress')]",
                            "[variables('adBDCNicIPAddress')]"
                        ]
                    }
                }
            }
        }
    ],
    "outputs": {
        "vNetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('vNetName'))]"
        }
    }
}