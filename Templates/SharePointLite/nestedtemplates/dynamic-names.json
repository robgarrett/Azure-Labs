{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Name of the lab."
            }
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "nsgName": "[concat(variables('commonID'), '-nsg')]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]",
        "serversInfo": {
            "standaloneServers": [
                {
                    "vmName": "dc",
                    "vmIPAddress": "10.0.0.5",
                    "vmSize": "Standard_DS1_V2"
                },
                {
                    "vmName": "app",
                    "vmIPAddress": "10.0.0.6",
                    "vmSize": "Standard_D2s_v3"
                },
                {
                    "vmName": "sql",
                    "vmIPAddress": "10.0.0.7",
                    "vmSize": "Standard_D4s_v3"
                }
            ],
            "privateLoadBalancedServers": [],
            "publicLoadBalancedServers": []
        }
    },
    "resources": [
    ],
    "outputs": {
        "vNetName": {
            "type": "string",
            "value": "[variables('vNetName')]"
        },
        "subnetName": {
            "type": "string",
            "value": "[variables('subnetName')]"
        },
        "nsgName": {
            "type": "string",
            "value": "[variables('nsgName')]"
        },
        "serversInfo": {
            "type": "object",
            "value": "[variables('serversInfo')]"
        }
    }
}
