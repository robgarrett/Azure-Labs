{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Name of the lab."
            }
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "nsgName": "[concat(variables('commonID'), '-nsg')]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]",
        "serversInfo": {
            "standaloneServers": [
                {
                    "vmName": "prx1",
                    "vmIPAddress": "10.0.0.23",
                    "vmSize": "Standard_D2s_v3"
                },
                {
                    "vmName": "prx2",
                    "vmIPAddress": "10.0.0.24",
                    "vmSize": "Standard_D2s_v3"
                }
            ],
            "privateLoadBalancedServers": [
                {
                    "lbName": "fedlb",
                    "lbIPAddress": "10.0.0.20",
                    "lbPort": 80,
                    "servers": [
                        {
                            "vmName": "fed1",
                            "vmIPAddress": "10.0.0.21",
                            "vmSize": "Standard_D2s_v3"
                        },
                        {
                            "vmName": "fed2",
                            "vmIPAddress": "10.0.0.22",
                            "vmSize": "Standard_D2s_v3"
                        }
                    ]
                }
            ],
            "publicLoadBalancedServers": []
        }
    },
    "resources": [
    ],
    "outputs": {
        "vNetName": {
            "type": "string",
            "value": "[variables('vNetName')]"
        },
        "subnetName": {
            "type": "string",
            "value": "[variables('subnetName')]"
        },
        "nsgName": {
            "type": "string",
            "value": "[variables('nsgName')]"
        },
        "serversInfo": {
            "type": "object",
            "value": "[variables('serversInfo')]"
        }
    }
}
