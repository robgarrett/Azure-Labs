{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Administrator password."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]",
        "templates": {
            "serversTemplateUri": "[concat(parameters('_artifactsLocation'),'/azuredeploy.servers.json', parameters('_artifactsLocationSasToken'))]",
            "vnetTemplateUri": "[concat(parameters('_artifactsLocation'),'/vnet-with-dns.json', parameters('_artifactsLocationSasToken'))]",
            "nsgTemplateUri": "[concat(parameters('_artifactsLocation'),'/create-nsg.json', parameters('_artifactsLocationSasToken'))]",
            "createServersTemplateUri": "[concat(parameters('_artifactsLocation'),'/create-servers.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "comments": "Get server details.",
            "condition": true,
            "type": "Microsoft.Resources/deployments",
            "name": "ServerDetails",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').serversTemplateUri]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ]
}