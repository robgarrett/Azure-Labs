{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "administrator password."
            }
        },
        "vNetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the virtual network."
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the subnet."
            }
        },
        "nsgName": {
            "type": "string",
            "metadata": {
                "description": "Name of network security group."
            }
        },
        "lbServers": {
            "type": "object",
            "metadata": {
                "description": "Servers information."
            }
        },
        "createVMs": {
            "type": "bool",
            "metadata": {
                "description": "Do we create the actual VMs?"
            },
            "defaultValue": true
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "lbName": "[concat(variables('commonID'), '-', parameters('lbServers').lbName)]",
        "lbASetName": "[concat(variables('lbName'), '-aset')]",
        "lbPort": "[parameters('lbServers').lbPort]",
        "lbDNSName": "[parameters('lbServers').lbDNSName]",
        "lbPIPName": "[concat(variables('lbName'), '-pip')]",
        "lbPIPID": "[resourceId('Microsoft.Network/publicIPAddresses',variables('lbPIPName'))]",
        "lbResourceId": "[resourceId('Microsoft.Network/loadBalancers/', variables('lbName'))]",
        "templates": {
            "createVMTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-lbvm.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "comments": "Availability Set.",
            "type": "Microsoft.Compute/availabilitySets",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('lbASetName')]",
            "properties": {
                "PlatformUpdateDomainCount": 2,
                "PlatformFaultDomainCount": 2
            },
            "sku": {
                "name": "Aligned"
            },
            "tags": {
                "LabName": "[parameters('labName')]"
            }
        },
        {
            "comments": "Public IP Address for Load Balancer.",
            "apiVersion": "2016-11-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('lbPIPName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/availabilitySets/', variables('lbASetName'))]"
            ],
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[variables('lbDNSName')]"
                }
            },
            "tags": {
                "LabName": "[parameters('labName')]"
            }
        },
        {
            "comments": "Create Public IP Addresses for Servers.",
            "apiVersion": "2016-11-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-pip')]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "pipLoop",
                "count": "[length(parameters('lbServers').servers)]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName)]"
                }
            },
            "tags":{
                "LabName": "[parameters('labName')]",
                "Server": "[parameters('lbServers').servers[copyIndex()].vmName]"
            }
        },
        {
            "comments": "Public Load Balancer.",
            "type": "Microsoft.Network/loadBalancers",
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('lbName')]",
            "tags": {
                "LabName": "[parameters('labName')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('lbPIPName'))]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "loadBalancerFrontEnd",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[variables('lbPIPID')]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "loadBalancerBackEnd"
                    }
                ],
                "inboundNatRules": [
                    {
                        "name": "lbNATRule",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('lbName')), '/frontendIpConfigurations/loadBalancerFrontEnd')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": "[variables('lbPort')]",
                            "backendPort": "[variables('lbPort')]",
                            "enableFloatingIP": false
                        }
                    }
                ]
            }
        },
        {
            "comments": "NIC for Server.",
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-nic')]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "nicLoop",
                "count": "[length(parameters('lbServers').servers)]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-pip')]",
                "[concat('Microsoft.Network/loadBalancers/', variables('lbName'))]"
            ],
            "properties": {
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                },
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('lbServers').servers[copyIndex()].vmIPAddress]",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses/', concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-pip'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', parameters('vNetName'), parameters('subnetName'))]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[concat(variables('lbResourceId'), '/backendAddressPools/loadBalancerBackEnd')]"
                                }
                            ]
                        }
                    }
                ]
            },
            "tags": {
                "LabName": "[parameters('labName')]",
                "Server": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName)]"
            }
        },
        {
            "comments": "Servers.",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('Deploy-', parameters('lbServers').servers[copyIndex()].vmName)]",
            "apiVersion": "2016-09-01",
            "copy": {
                "name": "publicLBServersCount",
                "mode": "Parallel",
                "count": "[length(parameters('lbServers').servers)]"
            },
            "dependsOn": [
                "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-nic')]"        
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').createVMTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "nicName": {
                        "value": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-nic')]"
                    },
                    "vmName": {
                        "value": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName)]"
                    },
                    "vmOSDiskName": {
                        "value": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-osdisk')]"
                    },
                    "vmSize": {
                        "value": "[parameters('lbServers').servers[copyIndex()].vmSize]"
                    },
                    "availSetName": {
                        "value": "[variables('lbASetName')]"
                    },
                    "createVM": {
                        "value": "[parameters('createVMs')]"
                    }
                }
            }
        }
    ]
}