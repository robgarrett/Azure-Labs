{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "administrator password."
            }
        },
        "nicName": {
            "type": "string",
            "metadata": {
                "description": "Name of network interface."
            }
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "Name of virtual machine."
            }
        },
        "availSetName": {
            "type": "string",
            "metadata": {
                "description": "Name of availability set."
            }
        },
        "vmOSDiskName": {
            "type": "string",
            "metadata": {
                "description": "Name of virtual machine OS disk."
            }
        },
        "vmSKU": {
            "type": "string",
            "metadata": {
                "description": "Windows SKU."
            },
            "defaultValue": "2019-Datacenter"
        },
        "vmSize": {
            "type": "string",
            "metadata": {
                "description": "Size of virtual machine."
            }
        },
        "createVM": {
            "type": "bool",
            "metadata": {
                "description": "Do we create the actual VM?"
            },
            "defaultValue": true
        }
    },
    "variables": {
    },
    "resources": [
        {
            "comments": "Create VM in an availability set.",
            "condition": "[parameters('createVM')]",
            "name": "[parameters('vmName')]",
            "apiVersion": "2017-03-30",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets',parameters('availSetName'))]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "[parameters('vmSKU')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[parameters('vmOSDiskName')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite"
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicName'))]"
                        }
                    ]
                }
            },
            "tags": {
                "LabName": "[parameters('labName')]",
                "Server": "[parameters('vmName')]"
            }
        },
        {
            "name": "[concat('shutdown-computevm-', parameters('vmName'))]",
            "type": "Microsoft.DevTestLab/schedules",
            "apiVersion": "2018-09-15",
            "location": "[resourceGroup().location]",
            "properties": {
                "status": "Enabled",
                "taskType": "ComputeVmShutdownTask",
                "dailyRecurrence": {
                    "time": "19:00"
                },
                "timeZoneId": "Eastern Standard Time",
                "targetResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('vmName'))]",
                "notificationSettings": {
                    "status": "Enabled",
                    "emailRecipient": "rogarret@microsoft.com",
                    "notificationLocale": "en",
                    "timeInMinutes": 15
                }
            },
            "tags": {
                "LabName": "[parameters('labName')]",
                "Server": "[parameters('vmName')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
            ]
        }
    ]
}