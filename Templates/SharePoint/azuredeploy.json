{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "spDNSName": {
            "type": "string",
            "metadata": {
                "description": "DNS label prefix for SP lab."
            }
        },
        "labSuffix": {
            "type": "string",
            "metadata": {
                "description": "Name suffix of each resource."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator username."
            },
            "defaultValue": "rgarrett"
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Administrator password."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "canRun": true,
        "templates": {
            "namesTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/dynamic-names.json', parameters('_artifactsLocationSasToken'))]",
            "vnetTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/vnet-with-dns.json', parameters('_artifactsLocationSasToken'))]",
            "nsgTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-nsg.json', parameters('_artifactsLocationSasToken'))]",
            "serversTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-servers.json', parameters('_artifactsLocationSasToken'))]"
        },
        "vNetIPSubnet": "10.0.0.0",
        "primaryDNSIPAddress": "10.0.0.5",
        "secondaryDNSIPAddress": "10.0.0.6"
    },
    "resources": [
        {
            "condition": true,
            "comments": "Get dynamic names.",
            "type": "Microsoft.Resources/deployments",
            "name": "DynamicNames",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').namesTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "spDNSName": {
                        "value": "[parameters('spDNSName')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateNSG",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/DynamicNames"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').nsgTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "nsgName": {
                        "value": "[reference('DynamicNames').outputs.nsgName.value]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateVNET",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateNSG"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "subnet": {
                        "value": "[variables('vNetIPSubnet')]"
                    },
                    "dnsServers": {
                        "value": [
                            "[variables('primaryDNSIPAddress')]",
                            "[variables('secondaryDNSIPAddress')]",
                            "8.8.8.8"
                        ]
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateServers",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateVNET"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').serversTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "labSuffix": {
                        "value": "[parameters('labSuffix')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "nsgName": {
                        "value": "[reference('DynamicNames').outputs.nsgName.value]"
                    },
                    "serversInfo": {
                        "value": "[reference('DynamicNames').outputs.serversInfo.value]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        }
    ]
}
