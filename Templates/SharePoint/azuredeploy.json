{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "vmNameSuffix": {
            "type": "string",
            "metadata": {
                "description": "Name suffix of each VM."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator username."
            },
            "defaultValue": "rgarrett"
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Administrator password."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "canRun": true,
        "templates": {
            "namesTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/dynamic-names.json', parameters('_artifactsLocationSasToken'))]",
            "vnetTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/vnet-with-dns.json', parameters('_artifactsLocationSasToken'))]",
            "nsgTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-nsg.json', parameters('_artifactsLocationSasToken'))]",
            "sqlTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-sql-servers.json', parameters('_artifactsLocationSasToken'))]",
            "adTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-domain-servers.json', parameters('_artifactsLocationSasToken'))]"
        },
        "vNetIPSubnet": "10.0.0.0",
        "ipAddresses": {
            "pdcPrivateIPAddress": "10.0.0.5",
            "bdcPrivateIPAddress": "10.0.0.6"
        }
    },
    "resources": [
        {
            "condition": true,
            "comments": "Get dynamic names.",
            "type": "Microsoft.Resources/deployments",
            "name": "DynamicNames",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').namesTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "vmNameSuffix": {
                        "value": "[parameters('vmNameSuffix')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateNSG",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/DynamicNames"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').nsgTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "nsgName": {
                        "value": "[reference('DynamicNames').outputs.nsgName.value]"
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateVNET",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateNSG"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vnetTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "subnet": {
                        "value": "[variables('vNetIPSubnet')]"
                    },
                    "dnsServers": {
                        "value": [
                            "[variables('IPAddresses').pdcPrivateIPAddress]",
                            "[variables('IPAddresses').bdcPrivateIPAddress]",
                            "8.8.8.8"
                        ]
                    }
                }
            }
        },
        {
            "condition": "[variables('canRun')]",
            "type": "Microsoft.Resources/deployments",
            "name": "CreateDomainServers",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/CreateVNET"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').adTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "adPDCNicIPAddress": {
                        "value": "[variables('IPAddresses').pdcPrivateIPAddress]"
                    },
                    "adBDCNicIPAddress": {
                        "value": "[variables('IPAddresses').bdcPrivateIPAddress]"
                    },
                    "vNetName": {
                        "value": "[reference('DynamicNames').outputs.vNetName.value]"
                    },
                    "subnetName": {
                        "value": "[reference('DynamicNames').outputs.subnetName.value]"
                    },
                    "nsgName": {
                        "value": "[reference('DynamicNames').outputs.nsgName.value]"
                    },
                    "pdcVMName": {
                        "value": "[reference('DynamicNames').outputs.pdcVMName.value]"
                    },
                    "bdcVMName": {
                        "value": "[reference('DynamicNames').outputs.bdcVMName.value]"
                    },
                    "vmSize": {
                        "value": "Standard_DS1_V2"
                    },
                    "vmSKU": {
                        "value": "2019-Datacenter"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    }
                }
            }
        }
    ]
}