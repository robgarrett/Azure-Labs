{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Name of the lab."
            }
        },
        "vmNameSuffix": {
            "type": "string",
            "metadata": {
                "description": "Name suffix of each VM."
            }
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "nsgName": "[concat(variables('commonID'), '-nsg')]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]",
        "serversInfo": {
            "standaloneServers": [
                {
                    "vmName": "[concat('rdg-pdc-', toLower(parameters('vmNameSuffix')))]",
                    "vmIPAddress": "10.0.0.5",
                    "vmSize": "Standard_DS1_V2"
                },
                {
                    "vmName": "[concat('rdg-bdc-', toLower(parameters('vmNameSuffix')))]",
                    "vmIPAddress": "10.0.0.6",
                    "vmSize": "Standard_DS1_V2"
                }
            ],
            "loadbalancedServers": [   
                {
                    "lbName": "rdg-sqllb",
                    "primary": 
                    {
                        "vmName": "[concat('rdg-sql1-', toLower(parameters('vmNameSuffix')))]",
                        "vmIPAddress": "10.0.0.7",
                        "vmSize": "Standard_DS4S_V3"
                    },
                    "secondary":
                    {
                        "vmName": "[concat('rdg-sql2-', toLower(parameters('vmNameSuffix')))]",
                        "vmIPAddress": "10.0.0.8",
                        "vmSize": "Standard_DS4S_V3"
                    }
                },
                {
                    "lbName": "rdg-applb",
                    "primary":
                    {
                        "vmName": "[concat('rdg-app1-', toLower(parameters('vmNameSuffix')))]",
                        "vmIPAddress": "10.0.0.9",
                        "vmSize": "Standard_DS4S_V3"
                    },
                    "secondary":
                    {
                        "vmName": "[concat('rdg-app2-', toLower(parameters('vmNameSuffix')))]",
                        "vmIPAddress": "10.0.0.10",
                        "vmSize": "Standard_DS4S_V3"
                    }
                },
                {
                    "primary":
                    {
                        "lbName": "rdg-wfelb",
                        "vmName": "[concat('rdg-wfe1-', toLower(parameters('vmNameSuffix')))]",
                        "vmIPAddress": "10.0.0.11",
                        "vmSize": "Standard_D2s_v3"
                    },
                    "secondary":
                    {
                        "vmName": "[concat('rdg-wfe2-', toLower(parameters('vmNameSuffix')))]",
                        "vmIPAddress": "10.0.0.8",
                        "vmSize": "Standard_D2s_v3"
                    }
                }
            ]
        }
    },
    "resources": [
    ],
    "outputs": {
        "vNetName": {
            "type": "string",
            "value": "[variables('vNetName')]"
        },
        "subnetName": {
            "type": "string",
            "value": "[variables('subnetName')]"
        },
        "nsgName": {
            "type": "string",
            "value": "[variables('nsgName')]"
        },
        "serversInfo": {
            "type": "object",
            "value": "[variables('serversInfo')]"
        }
    }
}
