{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Name of the lab."
            }
        },
        "spDNSName": {
            "type": "string",
            "metadata": {
                "description": "DNS label prefix for SP lab."
            }
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "nsgName": "[concat(variables('commonID'), '-nsg')]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]",
        "serversInfo": {
            "standaloneServers": [
                {
                    "vmName": "rdg-pdc",
                    "vmIPAddress": "10.0.0.5",
                    "vmSize": "Standard_DS1_V2"
                },
                {
                    "vmName": "rdg-bdc",
                    "vmIPAddress": "10.0.0.6",
                    "vmSize": "Standard_DS1_V2"
                }
            ],
            "privateLoadBalancedServers": [
                {
                    "lbName": "rdg-sqllb",
                    "lbIPAddress": "10.0.0.7",
                    "lbPort": 1433,
                    "servers": [
                        {
                            "vmName": "rdg-sql1",
                            "vmIPAddress": "10.0.0.8",
                            "vmSize": "Standard_DS4S_V3"
                        },
                        {
                            "vmName": "rdg-sql2",
                            "vmIPAddress": "10.0.0.9",
                            "vmSize": "Standard_DS4S_V3"
                        }
                    ]
                },
                {
                    "lbName": "rdg-applb",
                    "lbIPAddress": "10.0.0.10",
                    "lbPort": 2019,
                    "servers": [
                        {
                            "vmName": "rdg-app1",
                            "vmIPAddress": "10.0.0.11",
                            "vmSize": "Standard_DS4S_V3"
                        },
                        {
                            "vmName": "rdg-app2",
                            "vmIPAddress": "10.0.0.12",
                            "vmSize": "Standard_DS4S_V3"
                        }
                    ]
                }
            ],
            "publicLoadBalancedServers": [
                {
                    "lbName": "rdg-wfelb",
                    "lbIPAddress": "10.0.0.13",
                    "lbPort": 443,
                    "lbDNSName": "[parameters('spDNSName')]",
                    "servers": [
                        {
                            "vmName": "rdg-wfe1",
                            "vmIPAddress": "10.0.0.14",
                            "vmSize": "Standard_D2s_v3"
                        },
                        {
                            "vmName": "rdg-wfe2",
                            "vmIPAddress": "10.0.0.15",
                            "vmSize": "Standard_D2s_v3"
                        }
                    ]
                }
            ]
        }
    },
    "resources": [
    ],
    "outputs": {
        "vNetName": {
            "type": "string",
            "value": "[variables('vNetName')]"
        },
        "subnetName": {
            "type": "string",
            "value": "[variables('subnetName')]"
        },
        "nsgName": {
            "type": "string",
            "value": "[variables('nsgName')]"
        },
        "serversInfo": {
            "type": "object",
            "value": "[variables('serversInfo')]"
        }
    }
}
