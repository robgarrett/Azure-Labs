{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Name of the lab."
            }
        },
        "vmNameSuffix": {
            "type": "string",
            "metadata": {
                "description": "Name suffix of each VM."
            }
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "nsgName": "[concat(variables('commonID'), '-nsg')]",
        "vNetName": "[concat(variables('commonID'), '-vnet')]",
        "subnetName": "[concat(variables('vNetName'), '-subnet')]"
    },
    "resources": [
    ],
    "outputs": {
        "vNetName": {
            "type": "string",
            "value": "[variables('vNetName')]"
        },
        "subnetName": {
            "type": "string",
            "value": "[variables('subnetName')]"
        },
        "nsgName": {
            "type": "string",
            "value": "[variables('nsgName')]"
        },
        "pdcVMName": {
            "type": "string",
            "value": "[concat('rdg-pdc-', toLower(parameters('vmNameSuffix')))]"
        },
        "bdcVMName": {
            "type": "string",
            "value": "[concat('rdg-bdc-', toLower(parameters('vmNameSuffix')))]"
        },
        "wfe1VMName": {
            "type": "string",
            "value": "[concat('rdg-wfe1-', toLower(parameters('vmNameSuffix')))]"
        },
        "wfe2VMName": {
            "type": "string",
            "value": "[concat('rdg-wfe2-', toLower(parameters('vmNameSuffix')))]"
        },
        "app1VMName": {
            "type": "string",
            "value": "[concat('rdg-app1-', toLower(parameters('vmNameSuffix')))]"
        },
        "app2VMName": {
            "type": "string",
            "value": "[concat('rdg-app2-', toLower(parameters('vmNameSuffix')))]"
        },
        "sql1VMName": {
            "type": "string",
            "value": "[concat('rdg-sql1-', toLower(parameters('vmNameSuffix')))]"
        },
        "sql2VMName": {
            "type": "string",
            "value": "[concat('rdg-sql2-', toLower(parameters('vmNameSuffix')))]"
        }
    }
}
