{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Administrator password."
            }
        },
        "vNetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the virtual network."
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the subnet."
            }
        },
        "nsgName": {
            "type": "string",
            "metadata": {
                "description": "Name of network security group."
            }
        },
        "serversInfo": {
            "type": "object",
            "metadata": {
                "description": "Servers Information."
            }
        },
        "createVMs": {
            "type": "bool",
            "metadata": {
                "description": "Do we create the actual VMs?"
            },
            "defaultValue": true
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "templates": {
            "createVMTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-vm.json', parameters('_artifactsLocationSasToken'))]",
            "publicLbVMsTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-publiclb-vms.json', parameters('_artifactsLocationSasToken'))]",
            "privateLbVMsTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-privatelb-vms.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "comments": "Stand-alone Servers.",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('Deploy-', parameters('serversInfo').standaloneServers[copyIndex()].vmName)]",
            "apiVersion": "2016-09-01",
            "copy": {
                "name": "standaloneServersCount",
                "mode": "Parallel",
                "count": "[length(parameters('serversInfo').standaloneServers)]"
            },
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').createVMTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vNetName": {
                        "value": "[parameters('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "nsgName": {
                        "value": "[parameters('nsgName')]"
                    },
                    "publicIPAddressName": {
                        "value": "[concat(variables('commonID'), '-', parameters('serversInfo').standaloneServers[copyIndex()].vmName, '-pip')]"
                    },
                    "nicName": {
                        "value": "[concat(variables('commonID'), '-', parameters('serversInfo').standaloneServers[copyIndex()].vmName, '-nic')]"
                    },
                    "vmName": {
                        "value": "[concat(variables('commonID'), '-', parameters('serversInfo').standaloneServers[copyIndex()].vmName)]"
                    },
                    "vmOSDiskName": {
                        "value": "[concat(variables('commonID'), '-', parameters('serversInfo').standaloneServers[copyIndex()].vmName, '-osdisk')]"
                    },
                    "vmSize": {
                        "value": "[parameters('serversInfo').standaloneServers[copyIndex()].vmSize]"
                    },
                    "privateIPAddress": {
                        "value": "[parameters('serversInfo').standaloneServers[copyIndex()].vmIPAddress]"
                    },
                    "createVM": {
                        "value": "[parameters('createVMs')]"
                    }
                }
            }
        },
        {
            "comments": "Private Load Balanced Servers",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('Deploy-', parameters('serversInfo').privateLoadBalancedServers[copyIndex()].lbName)]",
            "apiVersion": "2016-09-01",
            "copy": {
                "name": "privateLoadBalancedServersCount",
                "mode": "Parallel",
                "count": "[length(parameters('serversInfo').privateLoadBalancedServers)]"
            },
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').privateLbVMsTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vNetName": {
                        "value": "[parameters('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "nsgName": {
                        "value": "[parameters('nsgName')]"
                    },
                    "lbServers": {
                        "value": "[parameters('serversInfo').privateLoadBalancedServers[copyIndex()]]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    },
                    "createVMs": {
                        "value": "[parameters('createVMs')]"
                    }
                }
            }
        },
        {
            "comments": "Public Load Balanced Servers",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('Deploy-', parameters('serversInfo').publicLoadBalancedServers[copyIndex()].lbName)]",
            "apiVersion": "2016-09-01",
            "copy": {
                "name": "publicLoadBalancedServersCount",
                "mode": "Parallel",
                "count": "[length(parameters('serversInfo').publicLoadBalancedServers)]"
            },
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').publicLbVMsTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vNetName": {
                        "value": "[parameters('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "nsgName": {
                        "value": "[parameters('nsgName')]"
                    },
                    "lbServers": {
                        "value": "[parameters('serversInfo').publicLoadBalancedServers[copyIndex()]]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    },
                    "createVMs": {
                        "value": "[parameters('createVMs')]"
                    }
                }
            }
        }
    ]
}
