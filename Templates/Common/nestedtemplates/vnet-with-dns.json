{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Name of the lab."
            }
        },
        "vNetName": {
            "type": "string",
            "metadata": {
                "description": "VNET Name."
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "VNET Subnet Name."
            }
        },
        "subnet": {
            "type": "string",
            "metadata": {
                "description": "VNET Subnet CIDR."
            }
        },
        "dnsServers": {
            "type": "array",
            "metadata": {
                "description": "DNS Servers"
            }
        }
    },
    "resources": [
        {
            "comments": "Create Virtual Network with DNS Servers",
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vNetName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[concat(parameters('subnet'), '/16')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": "[parameters('dnsServers')]"
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "[concat(parameters('subnet'), '/24')]"
                        }
                    }
                ]
            },
            "tags":{
                "LabName": "[parameters('labName')]"
            }
        }
    ],
    "outputs": {
        "vNetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vNetName'))]"
        }
    }
}
