{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "serversInfo": {
            "type": "object",
            "metadata": {
                "description": "Servers Information."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "templates": {
            "deployPDCTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/deployPDC.json', parameters('_artifactsLocationSasToken'))]",
            "deployBDCTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/deployBDC.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [

    ]

}