{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "pdcVMName": {
            "type": "string",
            "metadata": {
                "description": "Name of the PDC VM."
            }
        },
        "bdcVMName": {
            "type": "string",
            "metadata": {
                "description": "Name of the BDC VM."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Administrator password."
            }
        },
        "compileName": {
            "type": "string",
            "metadata": {
                "description": "Name for the compile job."
            },
            "defaultValue": "[newGuid()]"
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "automationAccount": "[concat(variables('commonID'), '-automation')]",
        "automationResources": {
            "xActiveDirectory": {
                "name": "xActiveDirectory",
                "url": "https://devopsgallerystorage.blob.core.windows.net/packages/xactivedirectory.2.16.0.nupkg"
            },
            "xStorage": {
                "name": "xStorage",
                "url": "https://devopsgallerystorage.blob.core.windows.net/packages/xstorage.3.2.0.nupkg"
            }
        },
        "dscScripts": {
            "DomainControllerConfig": {
                "name": "DomainControllerConfig",
                "description": "Configure AD.",
                "script": "/dscConfigurations/DomainControllerConfig.ps1"
            }
        },
        "pdcVMNameFull": "[concat(variables('commonID'), '-', parameters('pdcVMName'))]",
        "bdcVMNameFull": "[concat(variables('commonID'), '-', parameters('bdcVMName'))]",
        "dscCommonConfig": "{\"NodeName\":\"*\",\"PSDscAllowPlainTextPassword\":true}",
        "dscPDCConfig": "[concat('{\"NodeName\":\"', variables('pdcVMNameFull'), '\", \"Role\":\"PDC\"}')]",
        "dscBDCConfig": "[concat('{\"NodeName\":\"', variables('bdcVMNameFull'), '\", \"Role\":\"BDC\"}')]",
        "dscConfigData": "[concat('{\"AllNodes\":[', variables('dscCommonConfig'), ',', variables('dscPDCConfig'), ',', variables('dscBDCConfig'), ']}')]",
        "templates": {
            "onboardServerTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/onboard-server.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "comments": "Automation Account",
            "name": "[variables('automationAccount')]",
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "Basic"
                }
            },
            "resources": [
                {
                    "name": "[variables('automationResources').xActiveDirectory.name]",
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[variables('automationAccount')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "[variables('automationResources').xActiveDirectory.url]"
                        }
                    }
                },
                {
                    "name": "[variables('automationResources').xStorage.name]",
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[variables('automationAccount')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "[variables('automationResources').xStorage.url]"
                        }
                    }
                },
                {
                    "name": "domainCredential",
                    "type": "credentials",
                    "apiVersion": "2015-10-31",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[variables('automationAccount')]"
                    ],
                    "properties": {
                        "userName": "[parameters('adminUsername')]",
                        "password": "[parameters('adminPassword')]"
                    }
                },
                {
                    "name": "[variables('dscScripts').DomainControllerConfig.name]",
                    "type": "configurations",
                    "apiVersion": "2015-10-31",
                    "location": "[resourceGroup().location]",
                    "tags": {
                        "LabName": "[parameters('labName')]"
                    },
                    "dependsOn": [
                        "[variables('automationAccount')]",
                        "[variables('automationResources').xActiveDirectory.name]",
                        "[variables('automationResources').xStorage.name]",
                        "domainCredential"
                    ],
                    "properties": {
                        "state": "Published",
                        "overwrite": "true",
                        "source": {
                            "type": "uri",
                            "value": "[concat(parameters('_artifactsLocation'), variables('dscScripts').DomainControllerConfig.script, parameters('_artifactsLocationSasToken'))]"
                        }
                    }
                },
                {
                    "name": "[parameters('compileName')]",
                    "type": "compilationjobs",
                    "apiVersion": "2015-10-31",
                    "tags": {
                        "LabName": "[parameters('labName')]"
                    },
                    "dependsOn": [
                        "[variables('automationAccount')]",
                        "[variables('dscScripts').DomainControllerConfig.name]"
                    ],
                    "properties": {
                        "configuration": {
                            "name": "[variables('dscScripts').DomainControllerConfig.name]"
                        },
                        "parameters": {
                            "ConfigurationData": "[variables('dscConfigData')]"
                        }
                    }
                }
            ],
            "tags": {
                "LabName": "[parameters('labName')]"
            }
        },
        {
            "comments": "Onboard PDC.",
            "type": "Microsoft.Resources/deployments",
            "name": "OnboardPDC",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "[concat('Microsoft.Automation/automationAccounts/', variables('automationAccount'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').onboardServerTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "nodeConfigurationName": {
                        "value": "[concat(variables('dscScripts').DomainControllerConfig.name, '.', parameters('pdcVMName'))]"
                    },
                    "automationAccountName": {
                        "value": "[variables('automationAccount')]"
                    },
                    "vmName": {
                        "value": "[parameters('pdcVMName')]"
                    }
                }
            }
        }
    ]
}
