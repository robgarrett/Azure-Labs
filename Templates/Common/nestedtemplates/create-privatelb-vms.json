{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "labName": {
            "type": "string",
            "metadata": {
                "description": "Lab Name."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Administrator username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "administrator password."
            }
        },
        "vNetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the virtual network."
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the subnet."
            }
        },
        "nsgName": {
            "type": "string",
            "metadata": {
                "description": "Name of network security group."
            }
        },
        "lbServers": {
            "type": "object",
            "metadata": {
                "description": "Servers information."
            }
        },"_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources such as templates and DSC modules that the script is dependent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "commonID": "[toLower(parameters('labName'))]",
        "lbName": "[concat(variables('commonID'), '-', parameters('lbServers').lbName)]",
        "lbPort": "[parameters('lbServers').lbPort]",
        "lbIPAddress": "[parameters('lbServers').lbIPAddress]",
        "lbResourceId": "[resourceId('Microsoft.Network/loadBalancers/', variables('lbName'))]",
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vNetName'), parameters('subnetName'))]",
        "templates": {
            "createVMTemplateUri": "[concat(parameters('_artifactsLocation'),'/nestedtemplates/create-vm.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "comments": "Private Load Balancer.",
            "type": "Microsoft.Network/loadBalancers",
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('lbName')]",
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "loadBalancerFrontEnd",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAddress": "[variables('lbIPAddress')]",
                            "privateIPAllocationMethod": "Static"
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "loadBalancerBackEnd"
                    }
                ],
                "loadBalancingRules": [
                    {
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('lbName')), '/frontendIpConfigurations/loadBalancerFrontEnd')]"
                            },
                            "backendAddressPool": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('lbName')), '/backendAddressPools/loadBalancerBackEnd')]"
                            },
                            "probe": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('lbName')), '/probes/lbprobe')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": "[variables('lbPort')]",
                            "backendPort": "[variables('lbPort')]",
                            "idleTimeoutInMinutes": 15
                        },
                        "name": "lbrule"
                    }
                ],
                "probes": [
                    {
                        "properties": {
                            "protocol": "Tcp",
                            "port": "[variables('lbPort')]",
                            "intervalInSeconds": 15,
                            "numberOfProbes": 2
                        },
                        "name": "lbprobe"
                    }
                ]
            }
        },
        {
            "comments": "NIC for Server.",
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-nic')]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "nicLoop",
                "count": "[length(parameters('lbServers').servers)]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/loadBalancers/', variables('lbName'))]"
            ],
            "properties": {
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                },
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('lbServers').servers[copyIndex()].vmIPAddress]",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', parameters('vNetName'), parameters('subnetName'))]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[concat(variables('lbResourceId'), '/backendAddressPools/loadBalancerBackEnd')]"
                                }
                            ]
                        }
                    }
                ]
            },
            "tags": {
                "LabName": "[parameters('labName')]",
                "Server": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName)]"
            }
        },
        {
            "comments": "Servers.",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('Deploy-', parameters('lbServers').servers[copyIndex()].vmName)]",
            "apiVersion": "2016-09-01",
            "copy": {
                "name": "privateLBServersCount",
                "mode": "Parallel",
                "count": "[length(parameters('lbServers').servers)]"
            },
            "dependsOn": [
                "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-nic')]"        
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').createVMTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "labName": {
                        "value": "[parameters('labName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vNetName": {
                        "value": "[parameters('vNetName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "nsgName": {
                        "value": "[parameters('nsgName')]"
                    },
                    "publicIPAddressName": {
                        "value": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-pip')]"
                    },
                    "nicName": {
                        "value": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-nic')]"
                    },
                    "vmName": {
                        "value": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName)]"
                    },
                    "vmOSDiskName": {
                        "value": "[concat(variables('commonID'), '-', parameters('lbServers').servers[copyIndex()].vmName, '-osdisk')]"
                    },
                    "vmSize": {
                        "value": "[parameters('lbServers').servers[copyIndex()].vmSize]"
                    },
                    "privateIPAddress": {
                        "value": "[parameters('lbServers').servers[copyIndex()].vmIPAddress]"
                    }
                }
            }
        }
    ]
}